# The ROS_DISTRO environment variable MUST be set before running the rclgo-generation
#   Normally this environment variable come from `source`-ing the correct ROS2 workspace (i.e. `source /opt/ros/humble/setup.bash`)
export CGO_CFLAGS='-I/opt/ros/${ROS_DISTRO}/include/action_msgs -I/opt/ros/${ROS_DISTRO}/include/builtin_interfaces -I/opt/ros/${ROS_DISTRO}/include/rcl -I/opt/ros/${ROS_DISTRO}/include/rcl_action -I/opt/ros/${ROS_DISTRO}/include/rcl_yaml_param_parser -I/opt/ros/${ROS_DISTRO}/include/rcutils -I/opt/ros/${ROS_DISTRO}/include/rmw -I/opt/ros/${ROS_DISTRO}/include/rosidl_runtime_c -I/opt/ros/${ROS_DISTRO}/include/rosidl_typesupport_interface -I/opt/ros/${ROS_DISTRO}/include/std_msgs -I/opt/ros/${ROS_DISTRO}/include/unique_identifier_msgs '
export CGO_LDFLAGS='-L/opt/ros/${ROS_DISTRO}/lib -Wl,-rpath=/opt/ros/${ROS_DISTRO}/lib '
